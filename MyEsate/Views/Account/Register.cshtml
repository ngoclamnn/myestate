<div class="container">
    <div class="card card-container">
        <!-- <img class="profile-img-card" src="//lh3.googleusercontent.com/-6V8xOA6M7BA/AAAAAAAAAAI/AAAAAAAAAAA/rzlHcD0KYwo/photo.jpg?sz=120" alt="" /> -->
        <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
        <p id="profile-name" class="profile-name-card"></p>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-signin" }))
        {
            @Html.AntiForgeryToken()
            <span id="reauth-email" class="reauth-email"></span>
                <input type="email" name="email" id="email" class="form-control" placeholder="Email" required autofocus>
                <input type="password" id="password" name="password" class="form-control" placeholder="Mật khẩu" required>
                <input type="password" id="confirmpassword" name="confirmpassword" class="form-control" placeholder="Nhập lại mật khẩu" required>
                <input type="text" id="address" name="address" class="form-control" placeholder="Địa chỉ" required autofocus>
                <input type="text" id="phone" name="phone" class="form-control" placeholder="Số điện thoại">

                <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Sign in</button>
        }
    </div><!-- /card-container -->
</div><!-- /container -->
